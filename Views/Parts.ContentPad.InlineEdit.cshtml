@{
    Script.Require("ContentPad");
    Script.Include("orchard-inlineedit-ot.js");
}
@using (Script.Foot()) {
    <script type="text/javascript">
        $(function() {
            var contentItemId = @Model.Id;

            var contentItemVersion = @Model.ContentItem.Version;

            $.contenthub.initConnection(contentItemId, contentItemVersion);
        });
    </script>
}