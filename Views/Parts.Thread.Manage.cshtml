@using NGM.Forum
@using NGM.Forum.Extensions
@using NGM.Forum.Models
@{
    var postPart = (PostPart)Model.ContentPart;
}
@if (!postPart.ThreadPart.IsClosed) {
    <a href="@Url.PostReply(postPart)" class="create" title="@T("Reply to this Thread")"><img src="@Url.Content("~/Themes/Forum/Content/images/icons/0028.png")" alt="@T("Reply to this Thread")"/></a>
}
@if (Authorizer.Authorize(Permissions.DeletePost, postPart.ThreadPart.ContentItem) && postPart.IsParentThread()) {
    <a href="@Url.ThreadDelete(postPart.ThreadPart)" class="remove" title="@T("Delete")"><img src="@Url.Content("~/Themes/Forum/Content/images/icons/0420.png")" alt="@T("Delete")"/></a>
}